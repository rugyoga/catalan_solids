module rod(p1,p2,tk){ // draw ray between 2 specified points
  translate(p1)
     sphere(r=tk);
  translate(p2)
    sphere(r=tk);
  translate((p1+p2)/2)
    rotate([-acos((p2[2]-p1[2]) / norm(p1-p2)),0,
            -atan2(p2[0]-p1[0],p2[1]-p1[1])])
       cylinder(r1=tk, h=norm(p1-p2), center = true);
}

