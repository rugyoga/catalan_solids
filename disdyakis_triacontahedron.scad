// avoid this - it duplicates rods
module skeleton(items) {
    for (i = items) {
        face = f[i];   
        rod(v[face[0]], v[face[1]], 1);
        rod(v[face[1]], v[face[2]], 1);
        rod(v[face[2]], v[face[0]], 1);
    }
}

module labels(items) {
    for (i = items) {
        translate( v[i] ) {
            text( str( "c", i ) );
        };
    };
}

